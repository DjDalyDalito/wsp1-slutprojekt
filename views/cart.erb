<section class="section">
  <div class="container">
    <h2>Kundvagn</h2>
    <p class="muted">En produkt. Enkel checkout.</p>

    <div class="cart">
      <div class="cart-item">
        <img src="/images/keyboard.svg" alt="TyperBuddy" />
        <div class="cart-meta">
          <div class="cart-title">TyperBuddy</div>
          <div class="muted">449 kr / st</div>
        </div>

        <div class="cart-actions">
          <form action="/cart/remove" method="post" class="inline">
            <button class="btn btn-ghost" type="submit">âˆ’</button>
          </form>
          <div class="qty"><%= @qty %></div>
          <form action="/cart/add" method="post" class="inline">
            <button class="btn btn-ghost" type="submit">+</button>
          </form>
        </div>

        <div class="cart-sum"><%= money_kr(@subtotal_ore) %></div>
      </div>
    </div>
  </div>
</section>
