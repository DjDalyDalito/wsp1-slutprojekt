<section class="section">
  <div class="container">
    <h2>Kundvagn</h2>
    <p class="muted">En produkt. Enkel checkout.</p>

    <div class="cart">
      <div class="cart-item">
        <img src="/images/keyboard.svg" alt="TyperBuddy" />
        <div class="cart-meta">
          <div class="cart-title">TyperBuddy</div>
          <div class="muted">449 kr / st</div>
        </div>

        <div class="cart-actions">
          <form action="/cart/remove" method="post" class="inline">
            <button class="btn btn-ghost" type="submit">âˆ’</button>
          </form>
          <div class="qty"><%= @qty %></div>
          <form action="/cart/add" method="post" class="inline">
            <button class="btn btn-ghost" type="submit">+</button>
          </form>
        </div>

        <div class="cart-sum"><%= money_kr(@subtotal_ore) %></div>

        <div class="cart-checkout">
        <h3>Checkout</h3>
        <div class="spec-row"><span>Delsumma</span><span><%= money_kr(@subtotal_ore) %></span></div>
        <div class="spec-row"><span>Frakt</span><span>0 kr</span></div>
        <div class="spec-row total"><span>Totalt</span><span><%= money_kr(@subtotal_ore) %></span></div>

        <form action="/checkout" method="post" class="checkout-form">
          <label>
            Namn
            <input name="name" required placeholder="Ditt namn" />
          </label>
          <label>
            E-post
            <input name="email" type="email" required placeholder="din@email.se" />
          </label>

          <button class="btn btn-primary wide" type="submit" <%= @qty.to_i <= 0 ? "disabled" : "" %>>
            Betala
          </button>
          
        </form>
      </div>
      </div>
    </div>
  </div>
</section>
